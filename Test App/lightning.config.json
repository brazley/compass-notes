{
  "name": "Notes",
  "version": "1.0.0",
  "entry": "index.html",
  "storage": {
    "type": "filesystem",
    "defaultPath": "~/Documents/Notes"
  },
  "capabilities": [
    "camera",
    "microphone",
    "speech",
    "faceid",
    "location",
    "notifications",
    "clipboard",
    "wake-lock",
    "motion",
    "payments"
  ],
  "window": {
    "width": 1100,
    "height": 740,
    "minWidth": 700,
    "minHeight": 500,
    "title": "Notes",
    "titleBarStyle": "hiddenInset"
  },
  "bundle": {
    "icon": "Icon/icon.png"
  },
  "pwa": {
    "themeColor": "#1C1C1E",
    "backgroundColor": "#1C1C1E",
    "statusBarStyle": "black-translucent",
    "startUrl": "/",
    "scope": "/",
    "orientation": "any",
    "categories": ["productivity", "utilities"]
  }
}
